@model Lp.Services.Poco.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="title"><h1>Login</h1></div>
    <div class="container">
        <div class="left"></div>
        <div class="right">
            <div class="formbox">
                <form action="/Account/Login" method="post">
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <p>User Name</p>
                    <input type="text" id="EmailId" name="EmailId" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" placeholder="Email" />
                    <p>Password</p>
                    <input type="password" id="password" name="password" onfocus="this.placeholder = ''" onblur="this.placeholder = '*****'" placeholder="*****" />
                    <input type="submit" value="Sign In" />
                    <a href="#">Forget Password?</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}